
<div class='allproducts'>
  <div class='shoes'>
    <% @shoes.each do |shoe|%>
    <%= link_to image_tag(shoe.image, style: "width: 100px;"), shoe %>
    <%= link_to shoe.name, shoe %>
    <% end %>
  </div>

  <div class='accessories'>
    <% @accessories.each do |accessory| %>
    <%= link_to image_tag(accessory.image, style: "width: 100px;"), accessory %>
    <%= link_to accessory.name, accessory %>
    <% end %>
  </div>

  <div class='streetwears'>
    <% @streetwears.each do |streetwear| %>
    <%= link_to image_tag(streetwear.image, style: "width: 100px;"), streetwear %>
    <%= link_to streetwear.name, streetwear %>
    <% end %>
  </div>
</div>
