<%= form_with model: @product do |p| %>

<div>
<%= p.label :name, "Name" %>
<%= p.text_field :name %>
</div>

<div>
<%= p.label :product_type, "Type" %>
<%= p.collection_select :product_type, @categories, :title, :title %>
</div>

<div>
<%= p.label :price, "Price" %>
<%= p.number_field :price %>
</div>

<div>
<%= p.label :condition, "Condition" %>
<%= p.collection_select :condition, @conditions, :status, :status %>
</div>

<div>
<%= p.label :color, "Color" %>
<%= p.text_field :color %>
</div>

<div>
<% if @product.image.attached? %>
    <%= image_tag(@product.image, style: "width:100px;")  %>
<% end %>

<%= p.label :image, "Product Image" %>
<%= p.file_field :image %>
</div>

<div>
<%= p.submit "Save" %>
</div>
<% end %>


