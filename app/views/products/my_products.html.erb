<h1 class=item_edit_banner> Choose the item you want to edit</h1>

    <div class=container>
        <div class=subpage>
            <% @products.each do |product|%>
            <div class='tile'>
                    <div class='each_item_img'>
                        <%= link_to image_tag(product.image, :class => 'item_img'), edit_product_path(product) %>
                    </div>
                    <div class='each_item_name_price'>
                        <%= link_to product.name, edit_product_path(product), :class => 'item_link' %><br>
                        <p class=item.price>$<%= product.price %></p>
                    </div>
            </div>    
            <% end %>
        </div>
    </div>


