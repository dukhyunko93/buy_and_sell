<!DOCTYPE html>
<html>
  <head>
    <title>ScareCrow - User</title>
      <%= favicon_link_tag asset_path('circlelogo.png') %>
      <%= stylesheet_link_tag 'users' %>
  </head>

  <body>
    <%= link_to image_tag('logo.png'), root_path, class: "logo" %>

    <div class='search_bar'>
      <%= form_tag(search_page_path, :method => "get") do %>  
        <div class="input-group">  
          <%= search_field_tag :search, params[:search], placeholder: "Search", class: "form-control" %>  
            <div class="input-group-btn">  
              <%= button_tag "", :class => 'btn btn-info glyphicon glyphicon-search',:name => nil%>  
            </div>  
        </div>  
      <% end %>
    </div>
    
    <% if @user.valid? %>
    <%= link_to image_tag('cart.png'), pending_carts_path, class: 'cart' %>
    <% end %>

      <div class='header'>

        <% if @user.valid?  %>
          <div class='greeting'>
            Hi, <%= @user.name %>. Welcome Back!
          </div>

          <div class='myaccount'>
            <button>Account</button>
            <ul>
              <li><%= button_to 'Profile', user_path(@user), class: 'account_tab', :method => 'get' %></li>
              <li><%= button_to 'Edit', edit_user_path(@user), class: 'account_tab', :method => 'get' %></li>
              <li><%= button_to 'History', purchased_items_path, class: 'account_tab', :method => 'get' %></li>
            </ul>
          </div>

          <div class='sell'>
            <button>Sell</button>
            <ul>
              <li><%= button_to 'New', new_product_path, class: 'sell_tab', :method => 'get' %></li>
              <li><%= button_to 'Edit', myproducts_path, class: 'sell_tab', :method => 'get' %></li>
            </ul>
          </div>

        <% else %>
            <%= button_to 'Log In', login_path, :method => 'get', class: 'path_box' %>
            <%= button_to 'New Account', signup_path, :method => 'get', class: 'path_box' %>

        <% end %>

      <div class='browse'>
        <button>Browse</button>
          <ul>
          <li><%= button_to 'All Item', products_path, class: 'browse_tab', :method => 'get' %></li>
          <li><%= button_to 'Shoes', shoepage_path, class: 'browse_tab', :method => 'get' %></li>
          <li><%= button_to 'Streetwears', streetwearpage_path, class: 'browse_tab', :method => 'get' %></li>
          <li><%= button_to 'Accessories', accessorypage_path, class: 'browse_tab', :method => 'get' %></li>
          </ul>
      </div>

      <% if @user.valid? %>
        <%= button_to 'Log Out', logout_path, :method => 'post', class: 'path_box' %>
      <% end %>

      </div>



    <%= yield %>
  </body>
</html>
