<%= form_for @review do |f| %>

<%= f.label :comment %>
<%= f.text_field :comment %>

<%= f.label :rating %>
<%= f.number_field :rating, min: 1, max: 5 %>

<%= f.hidden_field :purchased_item_id, :value => @purchased_item.id %>
<%= f.hidden_field :seller_id, :value => @seller.id %>
<%= f.hidden_field :buyer_id, :value => @buyer.id %>

<%= f.submit "Submit Review" %>
<% end %>
