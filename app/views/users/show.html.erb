<div class="show_box">

  <h1><%= @user.name %>'s Seller Page</h1>

  <div class="show_field">
    <p>Contact: <%= @user.email %></p>
  </div>

  <% @user.products.each do |product|%>
  <div class="show_field">
        <% if product.notsold %>
          <p><%= link_to product.name, product_path(product) %></p>
          <%= link_to image_tag(product.image, style: "width:100px;"), product_path(product)%>
        <% end %>
    <% end %>
  </div>

  <div class="show_field">
    <% @user.seller_reviews.each do |review| %>
    <h2><%= "My Reviews" %></h2>
    <p>Buyer: <%= review.buyer.name %></p>
    <p><%= "#{review.comment} || Rating: #{review.rating}" %></p>
    <%= review.purchased_item.product.name %>
    <%= image_tag(review.purchased_item.product.image, style: "width:100px;") %>
    <p><%= @user.avg_rating %></p>
    <% end %>
  </div>

</div>
