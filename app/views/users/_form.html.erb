<div class='form_container'>
  <div class='error_message_form'>
      <% if flash[:user_error] %>
            <% flash[:user_error].each do |msg| %>
              <%= msg %>
            <% end %>
      <% end %>
  </div>

  <div class='form_box'>
    <%= form_for @user do |f| %>
      
      <div class='field'>
          <%= f.label :user_name, "Username" %><br>
          <%= f.text_field :user_name, :class => 'input' %><br><br>

          <%= f.label :password, "Password" %><br>
          <%= f.password_field :password, :class => 'input' %><br><br>

          <%= f.label :password_confirmation, "Password Confirmation" %><br>
          <%= f.password_field :password_confirmation, :class => 'input' %><br><br>

          <%= f.label :name, "Your Name" %><br>
          <%= f.text_field :name, :class => 'input' %><br><br>

          <%= f.label :address, "Address" %><br>
          <%= f.text_area :address, :class => 'address' %><br><br>

          <%= f.label :email, "E-Mail" %><br>
          <%= f.text_field :email, :class => 'input' %><br><br>

          <%= f.label :phone_number, "Phone Number" %><br>
          <%= f.text_field :phone_number, :class => 'input' %><br><br>

          <%= f.label :dob, "Date of Birth"%><br>
          <%= f.date_field :dob, as: :date, value: f.object.try(:strftime,"%m/%d/%Y") %><br><br>

        <div class='submit'>
          <%= f.submit "Save Account", :class => 'bttn' %>
        </div>
      
      </div>
    <% end %>
  </div>
</div>